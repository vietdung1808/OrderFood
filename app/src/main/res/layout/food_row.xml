<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSecondaryLight">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:id="@+id/imageView_food"
                android:layout_height="150dp"
                android:scaleType="fitCenter" />
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:orientation="vertical"
                android:layout_width="@dimen/size20dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:textColor="@color/colorPrimary_Dark"
                    android:id="@+id/textView_food_foodname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="@dimen/size30dp"
                    tools:text="Ten mon an"
                    android:textSize="@dimen/size20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView_food_price"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:height="@dimen/size30dp"
                    tools:text="100,000 VNĐ"
                    android:textSize="@dimen/size20dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/imageButton_add_to_cart"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/size40dp"
                    android:src="@drawable/ic_add_shopping_cart_24"
                    android:background="@color/colorPrimary"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>