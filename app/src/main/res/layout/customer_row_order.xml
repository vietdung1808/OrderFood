<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">
        <ImageView
            android:padding="@dimen/size10dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:id="@+id/imageView_cart_food"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="@dimen/size20dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:textColor="@color/colorPrimary_Dark"
                android:id="@+id/textView_cart_food_foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="@dimen/size30dp"
                tools:text="Ten mon an"
                android:textSize="@dimen/size20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView_cart_food_price"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:height="@dimen/size30dp"
                tools:text="100,000 VNĐ"
                android:textSize="@dimen/size20dp"
                android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:text="Đã đặt:"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/size20dp"
                        />
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="0"
                        android:layout_width="@dimen/size40dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/size20dp"
                        android:id="@+id/textView_cart_quantity"/>
                </LinearLayout>



        </LinearLayout>

    </LinearLayout>






</LinearLayout>